pipeline {
	agent any
	environment {
		pass = credentials('PASSWORD')
	}
	stages {
		stage("Building the Student Survey Image") {
			steps {
				script {
					checkout scm
					sh 'rm -rf *.war'
					sh 'jar -cvf StudentSurvey.war -C 645_HW2/src/main/webapp/ .'
					sh 'echo ${BUILD_TIMESTAMP}'
					sh 'docker login -u onkar97 -p $pass'
					def customImage = docker.build('onkar97/jkswe645:${BUILD_TIMESTAMP}')
					
				}
			}
		}
		stage("Pushing Image to DockerHub") {
			steps {
				script {
					sh'docker push onkar97/swe645:${BUILD_TIMESTAMP}'
				}
			}
		}
		stage("Deploying to Rancher as single pod") {
			steps {
				sh 'kubectl set image deployment/stusurvey-pipeline stusurvey-pipeline=onkar97/swe645:${BUILD_TIMESTAMP} -n jenkins-pipeline'
			}
		}
		stage("Deploying to Rancher as with load balancer") {
			steps {
				sh 'kubectl set image deployment/studentsurvey645-lb studentsurvey645-lb=onkar97/swe645:${BUILD_TIMESTAMP} -n jenkins-pipeline'
			}
		}
	}
}		
									
